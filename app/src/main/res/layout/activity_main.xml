<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/eat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You should eat:"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/food_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eat_text"
        android:src = "@drawable/default_food"/>

    <TextView
        android:id="@+id/food_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_image" />
    <LinearLayout
        android:id="@+id/main_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_text">

        <Button
            android:id="@+id/try_again"
            android:layout_width="100dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="match_parent"
            android:text="Reroll"/>
        <Button
            android:id="@+id/search_button"
            android:layout_width="100dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="match_parent"
            android:text="More info"/>
        <Button
            android:id="@+id/edit_list_button"
            android:layout_width="100dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="match_parent"
            android:text="Change List"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>